{% extends 'base.html.twig' %}

{% block head %} 

    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10 text-center">

                    <h2><b>Symfony 2</b></h2>
                    <br>
                    <h4 class="text-muted">Witam wszystkich sympatyków programowania w php na moim blogu</h4>
                    <hr>
                </div>
                <div class="col-md-1"></div>

            </div>
        </div>
    </div>
    
{% endblock %}

{% block body %}
    
    <div class="row">
        <h2 class="text-info"> {{ post.title }} </h2>
        
        <h4> {{ post.content }} </h4>
        <h4 class="text-danger text-right">Dodano: {{ post.createdat|date("H:i m/d/Y") }}</h4>
        <hr>
    </div>
    
    <div class="row">
        {% if app.user %}
            <h3>Twój komentarz:</h3>
          
                
                    {{ form_start(form) }}

                        {{ form_widget(form) }}

                        <button class="btn btn-primary pull-right">Dodaj komentarz</button>

                    {{ form_end(form) }}
          
            
            
        {% else %}
            <div>
                <h4>Komentarze mogą dodawać tylko zalogowani użytkownicy. <a href="{{ path('fos_user_security_login')}}">Zaloguj się</a></h4>
                <br>
            </div>
        {% endif %}
        
    </div>
        
    <div class="row">
        <h3>Ostatnie komentarze:</h3>
        <hr>
        {% for comment in post.comments %}
        
            <div>
                <h4 class="text-danger">Dodano: {{ comment.createdat|date("H:i m/d/Y")}} {% if comment.user %} przez: {{ comment.user }} {% endif %}</h4>
                <h4><b>{{ comment.content}}</b></h4> 
                <hr>
            </div>
            
        {% endfor %}
    
    </div>
   
    
{% endblock %}

{% block footer %}
   <footer class="footer">
        <p class="text-center">&copy; Symfony blog 2016.</p>
      </footer>
{% endblock %}
